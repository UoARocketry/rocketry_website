datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // Uncomment when using supabase
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String
  date        DateTime
  location    String
  isPast      Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Rocket {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String   @unique
  description String
  image       String
  launchedAt  DateTime?
}

model Exec {
  id        Int     @id @default(autoincrement())
  name      String
  role      String
  bio       String
  photo     String
  order     Int     // for custom sorting on the exec page
}

model Sponsor {
  id          Int    @id @default(autoincrement())
  name        String
  logo        String
  url         String
  description String
}
